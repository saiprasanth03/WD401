<div class="task-grid">
  <% tasks.forEach(task => { %>
    <div class="task-card <%= task.status === 'Completed' ? 'done' : '' %>">
      
      <h3><%= task.title %></h3>
      <p class="category"><%= task.category %></p>
      <p class="deadline">ðŸ“… <%= task.deadline %></p>

      <p class="priority <%= task.priority.toLowerCase() %>">
        <%= task.priority %> Priority
      </p>

      <% if(task.status !== 'Completed') { %>
        <a href="/tasks/complete/<%= task.id %>" class="complete-btn">
          Mark Completed
        </a>
      <% } else { %>
        <span class="completed-badge">âœ” Completed</span>
      <% } %>

      <a href="/tasks/delete/<%= task.id %>" class="delete-btn">
        Delete
      </a>

    </div>
  <% }) %>
</div>


</body>
